.course-title {
	font-size: 15px;
	color: #bbb;
	margin: 10px 0;
}

.course-content, .course-footer {
	font-size: 17px;
	color: #000;
	margin: 8px 0;
}

.course-footer {
	text-align: center;
	margin: 32px 8px -4px;
}

.course-divide {
	margin: 0;
	height: 4px;
}

.course-name {
    background: rgb(29, 170, 240);
    color: #fff;
    padding: 16px 0;
    text-align: center;
    font-size: 16px;
    border-radius: 5px 5px 0 0;
}
